<%- include('partials/header'); -%>

    <div class="profile-container">
        <div class="profile-pic">
            <img src="<%= user.userpic %>" alt="User's Name" id="profilePic">

        </div>
        <div class="user-info">
            <h2>
                <%= user.firstName %>
                    <%= user.lastName %>
            </h2>
            <h3>@<%= user.username %>
            </h3>
            <p>Email: <%= user.email %>
            </p>
            <p>User since: <%= user.joinDate.getFullYear() %>
            </p>
            <p>User id: <%= user._id %>
            </p>
        </div>
    </div>


    <%- include('partials/footer'); -%>